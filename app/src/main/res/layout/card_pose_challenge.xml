<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pose_challenge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F5F5FF"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POSE CHALLENGE"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#3F51B5"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold the pose:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_target_pose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dog"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E91E63"
                android:gravity="end" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_pose_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/45 sec"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/pose_hold_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progressTint="#4CAF50"
            android:max="45"
            android:progress="0" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
